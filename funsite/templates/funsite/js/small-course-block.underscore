<div class="small-course center-block">

    <div class="top">
        <div class="type">
            <%= course_type %>
        </div>
        <img class="main img-responsive" src="<%= image_url %>">

    </div>
    <div class="middle">
        <div class="title">
            <%= title %>
        </div>
        <div class="universities">
            <% _.each(universities, function(university) { %>
                <span><%- university.name %></span>
            <% }) %>
        </div>
    </div>
    <div class="bottom">

        <div class="footer row">
            <div class="date col-sm-20">
                <%- gettext("Starts") %>
                <br>
                14 DÃ©c. 2015
            </div>
            <a href="<%= course_about %>"><div class="register col-sm-16">
                <%- gettext("Register") %>
            </div></a>
        </div>
    </div>

</div>
